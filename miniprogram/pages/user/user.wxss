  .user-info-name {
      display: flex;
      align-items: center;
      height: 48rpx;
  }
  .gender-image {
      width: 1em;
      height: 1em;
      margin-left: 12rpx;
  }
  .user-avatar {
    width: 50px; height: 50px; display: block; border-radius: 4px;
  }

  .user-part {
    display: flex;
    justify-content: space-between;
    flex-direction: row;
    background: #fff;
    padding: 16px;
    width: 100vw;
    box-sizing: border-box;
  }
  .user-part__item {
    width: 200rpx;
    /* height: 200rpx; */
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
  }
  .user-part__item-icon {
    width:32px;
    height: 32px;
  }
  .user-part-placeholder{
    margin: 5px;
    padding: 0 10px;
    text-align: center;
    /* height: 2.3em;
    line-height: 2.3em; */
    color: var(--weui-FG-1);
}
.user-cell {
  width: 100vw;
  box-sizing: border-box;
  position: relative;
}
.user-cell .user-service-button {
  display: inline-block;
  position: absolute;
  width: 100vw;
  height: 112rpx;
  top: 0;
  left: 0;
  opacity: 0;
}

