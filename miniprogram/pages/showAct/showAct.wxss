/* miniprogram/pages/showAct/showAct.wxss */
@import "showAct.skeleton.wxss";

.show-act {
  margin: 0 16px 56px;
}
.act-block {
  box-sizing: border-box;
  background: var(--weui-BG-2);
  width: 100%;
  border-radius: 2px;
}
.page-head {
  /* padding: 30px 25px 40px; */
  padding: 30px 25px 20px;
  text-align: center;
}
.page-head-title {
  display: inline-block;
  /* padding: 0 20px 10px 20px;
  font-size: 16px; */
  padding: 0 20px 10px 20px;
  font-size: 16px;
}
.page-head-line {
  margin: 0 auto;
  /* width: 75px;
  height: 1px; */
  width: 75px;
  height: 1px;
  background-color: var(--weui-FG-1);
}
.page-head-desc {
  padding-top: 10px;
  color: var(--weui-FG-1);
  font-size: 16px;
}

/* .act-location {
  box-sizing: border-box;
  background: var(--weui-BG-2);
  width: 100%;
  border-radius: 2px;
} */
.act-location-name {
  font-size: 18px;
  font-weight: 400;
  padding: 12px 12px 0 12px;
}
.act-location-address {
  font-size: 14px;
  color: var(--weui-FG-1);
  padding: 0 12px 0 12px;
}
.act-map {
  width: 100%;
}
.act-map::before {
  content: '';
  background: linear-gradient(to bottom, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 58, 0) 100%);
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 50px;
  top: 0;
}
.act-content {
  margin-top: 12px;
  padding: 12px;
}

.act-participator {
  margin-top: 12px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
}
.bottom-join {
  z-index: 9;
}
.mm button {
  width: 100% !important;
}
.act-participator-avatar {
  position: relative;
  padding-right: 20px;
}
.act-participator-avatar:after {
  content: " ";
  width: 12px;
  height: 24px;
  -webkit-mask-position: 0 0;
  mask-position: 0 0;
  -webkit-mask-repeat: no-repeat;
  mask-repeat: no-repeat;
  -webkit-mask-size: 100%;
  mask-size: 100%;
  background-color: currentColor;
  color: var(--weui-FG-2);
